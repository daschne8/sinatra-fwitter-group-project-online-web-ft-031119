<% if Helpers.current_user(session).id == @tweet.user.id %>
  <form action="/tweets/<%=@tweet.id%>/edit" method="post">
    <input type="hidden" name="_method" value="patch">
    <label for="content">Make a Fweet:</label>
      <input id="content" type="text" name="tweet[content]" value="<%=@tweet.content%>">
    <input id="submit" type="submit" value="Edit Tweet">
  </form>
<% end %>
